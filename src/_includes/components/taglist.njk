<div class="flex-grid flex-grid--wrap">
  {% for tag in taglist %}
    {% set tagCount = collections[tag].length %}
    {% if (tagCount > 0) %}
      {% set tagUrl %}/reviews/{{ tag }}/{% endset %}
      <a class="flex-grid__item flex-grid__item--small-item" href="{{ tagUrl | url }}" class="post-tag">
        <p class="home-summary t-center">{{ tag | capitalizeFirst }}</p>
        <small class="t-center">{{ tagCount }} reviews</small>
      </a>
    {% endif %}
  {% endfor %}
</div>
