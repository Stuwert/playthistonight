--- 
  layout: layouts/base-post.njk 
  section: post 
---
<h1>{{ title }}</h1>

<div class="flex-grid">

  <div class="flex-grid__item flex-grid__item--no-hover flex-grid__item--full-width">
    <p>
      <small>
        <time datetime="{{ date | machinedate }}">{{ date | readableDate }}</time>
      by
      {{ author }}
      </small>
    </p>

    {{ layoutContent | safe }}

    <hr/>

    <p>
      <small>
        <time datetime="{{ date | machinedate }}">Published:
            {{ date | readableDate }}</time>
      </small>
    </p>

      {% include "components/disclaimer.njk" %}
  </div>
</div>
<div class="flex-grid">
  <iframe 
    class="m-60"
    src="https://playingwithrules.substack.com/embed" 
    width="480" 
    height="320"
    frameborder="0" 
    scrolling="no"
    title="Substack Signup"
    allowtransparency="true"
  >
  </iframe>
</div>
</article>
