{
  "name": "play-this-tonight",
  "version": "1.0.0",
  "description": "A website about games.",
  "scripts": {
    "build": "npm-run-all sass eleventy",
    "watch": "eleventy --watch",
    "debug": "DEBUG=* eleventy",
    "eleventy:dev": "eleventy --serve --watch",
    "dev": "npm-run-all sass --parallel eleventy:dev sass:local",
    "sass:local": "node-sass -w src/sass/ -o _site/css/",
    "sass": "node-sass src/sass/ -o _site/css/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/play-this-tonight/blog"
  },
  "author": {
    "name": "Stuart Urback",
    "email": "stuart@urback.net",
    "url": "https://urback.net"
  },
  "license": "MIT",
  "homepage": "https://playthistonight.com",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "jsdom": "^16.2.2",
    "markdown-it": "^12.0.2",
    "markdown-it-anchor": "^6.0.1",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "bulma": "^0.9.1",
    "clean-css": "^4.2.1",
    "eleventy-plugin-seo": "^0.5.0",
    "feather-icons": "^4.24.0",
    "html-minifier": "^3.5.21",
    "local-web-server": "^2.6.1",
    "luxon": "^1.17.2",
    "node-sass": "^5.0.0",
    "uglify-es": "^3.3.9",
    "uglify-js": "^3.6.0"
  },
  "engines": {
    "node": "14.x",
    "npm": "6.x"
  }
}
