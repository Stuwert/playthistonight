    "jsdom": "^16.5.0",
    "local-web-server": "^4.2.1",
    "luxon": "^1.26.0",
    "markdown-it": "^12.0.4",
    "markdown-it-anchor": "^7.1.0",
    "node-sass": "^5.0.0",
    "uglify-es": "^3.3.9",
    "uglify-js": "^3.13.0"
  },
  "engines": {
    "node": "14.x",
    "npm": "6.x"
  }
