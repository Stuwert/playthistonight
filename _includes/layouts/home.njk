--- 
  layout: layouts/base.njk 
  section: home     
---

<h1>Latest Post</h1>
<div class="flex-grid flex-grid--wrap w-100">
    {% set post = collections.posts | sort(attribute = "date") | last %}
    <a class="flex-grid__item" href="{{ post.url | url }}">
        <h2 class="home-title">{{ post.data.title }}</h2>
        {% set image = post.data.content | getFirstImage %}
        {% if image %}
            <img src="{{image.src}}" alt="{{image.alt}}"/>
        {% endif %}
        <span>{{ post.data.author }}</span>
        {% if post.data.summary %}
            <p class="home-summary">
                {{ post.data.summary }}
            </p>
        {% endif %}
    </a>
</div>

<div class="flex-grid t-center">
    <a class="flex-grid__item" href="/blog">
        <h2 class="home-title m-0">Read all posts â†’</h2>
    </a>
</div>
